<Window x:Class="Gymnastika.Desktop.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:core="clr-namespace:Gymnastika.Desktop.Core;assembly=Gymnastika.Desktop.Core"
        xmlns:prism="clr-namespace:Microsoft.Practices.Prism.Regions;assembly=Microsoft.Practices.Prism"
        Title="Gymnastika健康平台" Height="350" Width="525">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <ItemsControl prism:RegionManager.RegionName="{x:Static core:RegionNames.MainBarRegion}" />
        <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.CenterRegion}" Grid.Column="1" />
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.OptionRegion}" Grid.Row="1" />
        </Grid>
    </Grid>
</Window>
