<Window x:Class="Gymnastika.Controls.Desktop.Demo.Sub.InstantSearchBoxDemo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Gymnastika.Controls.Desktop;assembly=Gymnastika.Controls.Desktop"
        Title="InstantSearchBoxDemo" Height="300" Width="300">
    <Grid Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition />
        </Grid.RowDefinitions>
        <controls:InstantSearchBox Grid.Row="1" x:Name="searchBox" MinHeight="26" DoSearch="OnDoSearch" Margin="10, 0"
                                   VerticalAlignment="Center" SearchImageSource="/Images/search.png"
                                   CornerRadius="4" Background="Transparent" BorderBrush="#DBDBDB">
        </controls:InstantSearchBox>
    </Grid>
</Window>
