<UserControl x:Class="Gymnastika.Phone.Controls.MicroBlogPublishWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="290" d:DesignWidth="449">
    
    <Grid x:Name="LayoutRoot" Background="#DD142B3E">
        <Grid.RowDefinitions>
            <RowDefinition Height="38*" />
            <RowDefinition Height="252*" />
        </Grid.RowDefinitions>
        
        <TextBlock Height="48" HorizontalAlignment="Left" Margin="23,0,0,0" Name="textBlock1" Text="发布微博" VerticalAlignment="Top" FontSize="28" />
        <Grid Grid.Row="1" Background="#95414141" Margin="8,0,8,8">
        <Button Content="发布" Height="72" HorizontalAlignment="Right" Margin="0,0,6,0" Name="button1" VerticalAlignment="Bottom" Width="181" Background="#8D656565" />
        <TextBox Name="textBox1" Text="" Margin="0,0,0,65" AcceptsReturn="True" />
        </Grid>
    </Grid>
</UserControl>
