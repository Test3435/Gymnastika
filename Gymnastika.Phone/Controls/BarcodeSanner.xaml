<UserControl x:Class="Gymnastika.Phone.Controls.BarcodeSanner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="209" d:DesignWidth="331">

    <Grid x:Name="LayoutRoot">
        <StackPanel>
            <Grid>
                <Border BorderThickness="3" BorderBrush="White"  Name="borderImage"  CornerRadius="3" Height="166" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="238">
                    <Image Name="BarcodeImage" />
                </Border>
                <Border Margin="121,61,110,69" BorderBrush="#FF494949" Background="#D35E5E5E" BorderThickness="3" CornerRadius="5" Width="100">
                    <TextBlock  Name="textBlock2" Text="点击扫描" TextAlignment="Center"  />
                </Border>
            </Grid>
            <TextBlock Name="txtResult" Text="扫描结果：" Height="27" VerticalAlignment="Bottom" Width="316" />
        </StackPanel>
    </Grid>
</UserControl>
