    </UserControl.Resources>
    <Grid>
         
        <Grid.RowDefinitions>
             
            <RowDefinition/>
             
        </Grid.RowDefinitions>
         
        <Calendar Margin="50" Style="{DynamicResource CalendarStyle}" CalendarDayButtonStyle="{DynamicResource CalendarDayButtonStyle}" Background="{x:Null}"/>
    </Grid>
</UserControl>
