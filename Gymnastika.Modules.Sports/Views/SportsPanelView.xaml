<UserControl x:Class="Gymnastika.Modules.Sports.Views.SportsPanelView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Gymnastika.Controls;assembly=Gymnastika.Controls"
             xmlns:local="clr-namespace:Gymnastika.Modules.Sports.Views"
             mc:Ignorable="d" 
             d:DesignHeight="502" d:DesignWidth="569" 
             xmlns:dd="clr-namespace:GongSolutions.Wpf.DragDrop;assembly=GongSolutions.Wpf.DragDrop" xmlns:my="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
             xmlns:my2="clr-namespace:FluidKit.Controls;assembly=FluidKit" xmlns:my1="http://schemas.microsoft.com/surface/2008">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <DataTemplate x:Key="SportCardTemplate">
                        <local:SportCardView/>
                    </DataTemplate>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="167*" />
            <ColumnDefinition Width="70*" />
            <ColumnDefinition Width="110*" />
            <ColumnDefinition Width="62*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="31*" />
            <RowDefinition Height="33*" />
            <RowDefinition Height="273*" />
            <RowDefinition Height="30*" />
        </Grid.RowDefinitions>
        <my:AutoCompleteBox Text="{Binding SearchName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" x:Name="SearchBox" FilterMode="Contains" ItemsSource="{Binding Items, ElementName=sportlist}" Margin="10,5,12,8" Grid.Column="2" Grid.ColumnSpan="2">
            <my:AutoCompleteBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Path=Name}"/>
                </DataTemplate>
            </my:AutoCompleteBox.ItemTemplate>
        </my:AutoCompleteBox>
        <TextBlock Height="23" HorizontalAlignment="Left" Margin="12,8,0,0" Name="textBlock1" Text="{Binding MaxPage}" VerticalAlignment="Top" Width="35" />
        <TextBlock Height="23" HorizontalAlignment="Right" Name="textBlock2" Text="{Binding CurrentPage}" VerticalAlignment="Top" Width="28" Margin="0,8,37,0" />
        <my1:SurfaceButton Content="上一页" Command="{Binding PreviousPageCommand}" Grid.Row="1" Grid.Column="3" />
        <my1:SurfaceButton Command="{Binding NextPageCommand}" Content="下一页" Grid.Row="3" Grid.Column="3" />
        <my1:SurfaceButton Command="{Binding SearchCommand}" Content="Search" Margin="6,5,2,7" Grid.Column="1" />
        <my1:SurfaceListBox SelectedItem="{Binding SelectedSport, Mode=TwoWay}" dd:DragDrop.DragHandler="{Binding}" dd:DragDrop.IsDragSource="True" dd:DragDrop.DragAdornerTemplate="{StaticResource ResourceKey=SportCardTemplate}" x:Name="sportlist" HorizontalContentAlignment="Stretch" Grid.Row="1" ItemsSource="{Binding ViewModels}" Grid.ColumnSpan="3" Grid.RowSpan="3">
            <my1:SurfaceListBox.ItemTemplate>
                <DataTemplate>
                    <local:SportCardView/>
                </DataTemplate>
            </my1:SurfaceListBox.ItemTemplate>
        </my1:SurfaceListBox>
    </Grid>
</UserControl>
