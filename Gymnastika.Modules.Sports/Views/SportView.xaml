<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converter="clr-namespace:Gymnastika.Modules.Sports.Converters"
             xmlns:Gymnastika_Controls="clr-namespace:Gymnastika.Controls;assembly=Gymnastika.Controls" x:Class="Gymnastika.Modules.Sports.Views.SportView" 
             mc:Ignorable="d" 
             d:DesignHeight="410" d:DesignWidth="414" xmlns:my="http://schemas.microsoft.com/surface/2008">
    <UserControl.Resources>
        <ResourceDictionary>
            <converter:RtfUriToDocumentConverter x:Key="RtfConverter"/>
            <converter:FullPathConverter x:Key="FullPathConverter"/>
            <converter:CalorieDecriptionConverter x:Key="CalorieDecriptionConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="0.237*"/>
    		<RowDefinition Height="0.763*"/>
    	</Grid.RowDefinitions>
    	<Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="49*" />
                <RowDefinition Height="48*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
    			<ColumnDefinition Width="129*"/>
                <ColumnDefinition Width="285*" />
            </Grid.ColumnDefinitions>
            <Image Stretch="Uniform" x:Name="Image" Source="{Binding ImageUri, Converter={StaticResource ResourceKey=FullPathConverter}}" Grid.RowSpan="2" />
    		<TextBlock x:Name="Title"  FontSize="30" TextWrapping="Wrap" Text="{Binding Name}" Grid.Column="1" />
            <TextBlock Grid.Column="1" Name="textBlock1" Grid.Row="1">
                <TextBlock.Text>
                    <MultiBinding Converter="{StaticResource ResourceKey=CalorieDecriptionConverter}">
                        <Binding Path="Minutes"/>
                        <Binding Path="Calories"/>
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <my:SurfaceButton Command="{Binding CloseCommand}" Content="关闭" Grid.Column="1" Height="23" Margin="0,7,13,0" Name="surfaceButton1" VerticalAlignment="Top" HorizontalAlignment="Right" Width="55" />
            <my:SurfaceButton Command="{Binding ExpandCommand}" Content="展开" Height="23" HorizontalAlignment="Right" Margin="0,7,74,0" Name="surfaceButton2" VerticalAlignment="Top" Width="55" Grid.Column="1" />
            <my:SurfaceButton Command="{Binding MinimizeCommand}" Content="缩小" Grid.Column="1" Height="23" HorizontalAlignment="Right" Margin="0,6,135,0" Name="surfaceButton3" VerticalAlignment="Top" Width="49" />
        </Grid>
        <FlowDocumentReader Document="{Binding IntroductionUri,Converter={StaticResource ResourceKey=RtfConverter}, IsAsync=True}" Grid.Row="1"/>
    </Grid>
</UserControl>
