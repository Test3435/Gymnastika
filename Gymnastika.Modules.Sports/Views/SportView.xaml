<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:converter="clr-namespace:Gymnastika.Modules.Sports.Converters"
             xmlns:Gymnastika_Controls="clr-namespace:Gymnastika.Controls;assembly=Gymnastika.Controls" x:Class="Gymnastika.Modules.Sports.Views.SportView" 
             mc:Ignorable="d" 
             d:DesignHeight="410" d:DesignWidth="414" d:DataContext="{d:DesignData Source=/DesignData/SportData.xaml}">
    <UserControl.Resources>
        <ResourceDictionary>
            <converter:UriToDocumentConverter x:Key="docconverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="0.237*"/>
    		<RowDefinition Height="0.763*"/>
    	</Grid.RowDefinitions>
    	<Grid>
    		<Grid.ColumnDefinitions>
    			<ColumnDefinition Width="0.312*"/>
    			<ColumnDefinition Width="0.688*"/>
    		</Grid.ColumnDefinitions>
            <Image x:Name="Image" Source="{Binding ImageUri}"/>
    		<TextBlock x:Name="Title" TextWrapping="Wrap" Text="{Binding Name}" Grid.Column="1"/>
        </Grid>
        <FlowDocumentReader Document="{Binding IntroductionUri,Converter={StaticResource ResourceKey=docconverter}}" Grid.Row="1">
            
        </FlowDocumentReader>
    </Grid>
</UserControl>
