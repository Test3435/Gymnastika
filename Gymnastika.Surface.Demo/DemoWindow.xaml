						<RemoveStoryboard BeginStoryboardName="TouchGlowOpacity0"/>
						<RemoveStoryboard BeginStoryboardName="ReleaseStoryboard"/>
						<RemoveStoryboard BeginStoryboardName="TouchGlowOpacity100"/>
