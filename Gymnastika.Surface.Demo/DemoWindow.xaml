									<SplineDoubleKeyFrame KeyTime="0:0:0.7" Value="45"/>
								</DoubleAnimationUsingKeyFrames>
								<DoubleAnimationUsingKeyFrames BeginTime="0" Storyboard.TargetProperty="(Shape.StrokeThickness)" Storyboard.TargetName="stackStroke">
