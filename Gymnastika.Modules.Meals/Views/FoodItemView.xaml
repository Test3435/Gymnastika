<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                    mc:Ignorable="d">
    <DataTemplate x:Key="DietPlanSubListItem">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Border BorderThickness="1" Width="42" Height="42" CornerRadius="4" Margin="2">
                <Image Width="40" Height="40" Source="{Binding Path=SmallImageUri}">
                    <Image.Clip>
                        <RectangleGeometry Rect="0, 0, 40, 40" RadiusX="4" RadiusY="4" />
                    </Image.Clip>
                </Image>
            </Border>
            <TextBlock Grid.Column="1" Text="{Binding Name}" />
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <TextBox Text="{Binding Amount}" />
                <TextBlock Text="克" />
            </StackPanel>
            <TextBlock Grid.Column="3">
                <TextBlock Text="{Binding Calories}" />
                <Run Text="大卡" />
            </TextBlock>
            <Button Grid.Column="4" Content="X" Command="{Binding DeleteFoodFromPlanCommand}" />
        </Grid>
    </DataTemplate>

    <DataTemplate x:Key="FoodListItem">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Border BorderThickness="1" Width="42" Height="42" CornerRadius="4" Margin="2" BorderBrush="{StaticResource WindowBorder}">
                <Image Width="40" Height="40" Source="{Binding Path=LargeImageUri}">
                    <Image.Clip>
                        <RectangleGeometry Rect="0, 0, 40, 40" RadiusX="4" RadiusY="4" />
                    </Image.Clip>
                </Image>
            </Border>
            <TextBlock Grid.Row="1" Text="{Binding Name}" />
            <TextBlock Grid.Row="2">
                <TextBlock Text="{Binding Calorie}" />
                <Run Text="大卡（每100克）" />
            </TextBlock>
            <Button Grid.Row="3" Content="添加到我的食物库" Command="{Binding AddFoodToMyFavoriteCommand}" />
            <Button Grid.Row="4" Content="显示食物详情" Command="{Binding ShowFoodDetailCommand}" />
        </Grid>
    </DataTemplate>
</ResourceDictionary>